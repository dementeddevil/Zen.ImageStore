@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <base href="/" />
    <title>@ViewData["Title"] - Zen Image Store</title>

    <!-- Google Tag Manager -->
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-NL9XN9H');</script>
    <!-- End Google Tag Manager -->
    <environment names="Development">
        <link rel="stylesheet" href="~/css/styles.css" />
        <link rel="stylesheet" href="~/css/ie.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/styles.min.css"
              asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
        <link rel="stylesheet" href="~/css/ie.min.css" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NL9XN9H"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <a href="#content" class="sr-only sr-only-focusable">Skip to main content</a>
    <header class="navbar navbar-toggleable-sm sticky-top navbar-inverse bg-faded" role="banner">
        <nav class="container" role="navigation">
            <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#mainMenuNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Zen Image Store</a>
            <div class="collapse navbar-collapse" id="mainMenuNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main id="content" role="main">
        @RenderBody()
    </main>

    <footer class="text-muted" role="contentinfo">
        <div class="container">
            <hr />
            <p>&copy; Zen Design Software @DateTime.Now.Year</p>
        </div>
    </footer>
    <script src="~/js/sitecore.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
